@model IEnumerable<BotsifySchemaTest.Models.Stories>
@{
    ViewData["Title"] = "Stories";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<h2>Stories</h2>

<div style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var story in Model)
    {
        <div style="border: 1px solid #ddd; border-radius: 10px; padding: 15px; width: 250px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
            <h3>@story.Name</h3>
            <p style="color: gray; font-size: 0.9em;">
                Created: @story.CreatedDate.ToString("dd MMM yyyy hh:mm tt")
            </p>
            <div style="margin-top: 10px; display: flex; gap: 10px;">

                <a asp-controller="Story" asp-action="GetStoryChain" asp-route-storyId="@story.ID" title="Story Chain">
                    <i class="fa-solid fa-link" style="color: green;"></i>
                </a>


                <a href="@Url.Action("Edit", "Components", new { id = story.ID })" title="Edit">
                    <i class="fa-solid fa-pen-to-square" style="color: #007bff;"></i>
                </a>
                <a href="@Url.Action("Delete", "Stories", new { id = story.ID })" title="Delete" onclick="return confirm('Are you sure?')">
                    <i class="fa-solid fa-trash" style="color: red;"></i>
                </a>
            </div>
        </div>
    }
</div>
