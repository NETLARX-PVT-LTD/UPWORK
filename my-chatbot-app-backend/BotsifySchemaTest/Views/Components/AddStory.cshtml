@model BotsifySchemaTest.Models.Stories
@{
    ViewData["Title"] = "Add Story";
}
<h2>Create Story</h2>
<form asp-action="AddStory" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  
    <button class="btn btn-primary" type="submit">Save Story</button>
</form>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success mt-2">@TempData["Msg"]</div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
