<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BotsifySchemaTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BotsifySchemaTest.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BotsifySchemaTest</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Components" asp-action="AddStory">Add Story</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Components" asp-action="AddUserInputPhrase">Add Phrase</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Components" asp-action="AddUserInputKeyword">Add Keyword</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Components" asp-action="AddUserInputAnything">Add Anything</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Components" asp-action="AllStories">All Stories</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            <div id="liveData" class="mt-4 p-3 border rounded bg-light" style="display:none;">
                <h5> Live Story Data</h5>
                <pre id="storyData" class="small"></pre>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - BotsifySchemaTest
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/storyHub")
            .configureLogging(signalR.LogLevel.Information) 
            .build();
        connection.on("StoryUpdated", function (session) {
            console.log("StoryUpdated event received:", session);
            document.getElementById("liveData").style.display = "block";
            document.getElementById("storyData").textContent =
                JSON.stringify(session, null, 2);

       
            localStorage.setItem("finalStoryJson", JSON.stringify(session));
        });


        connection.onclose(function (error) {
            console.error(" Connection closed:", error);
        });

        connection.onreconnecting(function (error) {
            console.warn(" Reconnecting...", error);
        });

        connection.onreconnected(function (connectionId) {
            console.log(" Reconnected. ConnectionId:", connectionId);
        });

        async function JoinStory(storyId) {
            try {
                console.log(" Connecting to SignalR...");
                await connection.start();
                console.log(" Connected. ConnectionId:", connection.connectionId);

                console.log(`Joining story group: story-${storyId}`);
               await connection.invoke("JoinStory", parseInt(storyId));

                console.log(`Joined story-${storyId}`);
            } catch (err) {
                console.error(" Error while joining story:", err);
            }
        }
    </script>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
