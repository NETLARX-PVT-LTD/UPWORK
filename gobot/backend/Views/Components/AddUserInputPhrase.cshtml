@model BotsifySchemaTest.Models.UserInputPhrase
@{
    var stories = ViewBag.Stories as SelectList;
    ViewData["Title"] = "Add Phrase";
}
<h2>Add Phrase Input</h2>

<form asp-action="AddUserInputPhrase" method="post" novalidate>
    <div class="mb-3">
        <label>Story</label>

        <select asp-for="StoryId" asp-items="@(stories)" id="StoryId" class="form-select">
            <option value="0" selected disabled>Select a story</option>
        </select>

       
    </div>
    <div class="mb-3">
        <label asp-for="json"></label>
        <textarea asp-for="json" class="form-control"></textarea>
        <span asp-validation-for="json" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save Phrase</button>
</form>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success mt-2">@TempData["Msg"]</div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
               document.addEventListener("DOMContentLoaded", function () {
            var storyDropdown = document.getElementById("StoryId");

            storyDropdown.addEventListener("change", function () {
                var selectedId = this.value;
                if (selectedId && selectedId !== "0") {
                    console.log("Joining story with ID:", selectedId);
                    JoinStory(parseInt(selectedId));
                }
            });
        });

    </script>
}
